{
	"name": "macx-cli-tool",
	"version": "1.0.4",
	"description": "MacX Script Executor CLI",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"macx": "bundle/macx.js"
	},
	"scripts": {
		"build": "tsc",
		"bundle": "node scripts/bundle.js",
		"dev": "tsc --watch",
		"start": "node dist/index.js",
		"prepare": "npm run build",
		"release": "npm version patch && npm run build && npm run bundle && npm publish"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"chokidar": "^3.5.3",
		"inquirer": "^9.2.15"
	},
	"devDependencies": {
		"@types/inquirer": "^9.0.7",
		"@types/node": "^22.15.14",
		"esbuild": "^0.20.0",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"files": [
		"dist/",
		"bundle/",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/FrozenProductions/Comet.git",
		"directory": "cli"
	},
	"publishConfig": {
		"access": "public"
	}
}
